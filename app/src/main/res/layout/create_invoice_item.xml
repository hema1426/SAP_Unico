<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/main_layout"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/item_code"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Code"
            android:textSize="12sp" />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/table_content_cell_bg"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:gravity="left"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                android:id="@+id/product"
                android:textColor="#212121"
                android:text="Item Descrition"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:textStyle="bold"
                android:id="@+id/stockQtyInv"
                android:textColor="@color/pink_clr"
                android:text=""
                android:textSize="12sp"
                />

        </LinearLayout>
        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/uomItem_inv"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="0"
            android:textSize="12sp"
            />
        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/actual_qty"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Quantity"
            android:textSize="12sp"
            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"

            android:textStyle="bold"
            android:id="@+id/price"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Price"
            android:textSize="12sp"

            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:id="@+id/sub_total"
            android:layout_weight="1"

            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Sub Total"
            android:textSize="12sp"

            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/return_qty"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Return"
            android:textSize="12sp"

            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/foc"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="FOC"
            android:textSize="12sp"
            />
        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/exchItem"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="FOC"
            android:textSize="12sp"
            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/net_qty"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Net Qty"
            android:textSize="12sp"
            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>



        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:visibility="gone"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/loose_price"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Price"
            android:textSize="10sp"

            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:visibility="gone"
            android:layout_height="match_parent"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/qty"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Qty"
            android:textSize="10sp"

            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>




        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/disc"
            android:layout_weight="1"

            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Disc"
            android:textSize="10sp"

            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>



        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:id="@+id/tax"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Tax"
            android:textSize="12sp"

            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/net_total"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Net Total"
            android:textSize="12sp"

            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#f3f3f3"
        android:layout_height="1dip"/>
</LinearLayout>