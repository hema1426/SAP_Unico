<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/rootLayout"
    android:visibility="gone"
    android:tag="enf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".printpreview.InvoicePrintPreviewActivity">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".printpreview.InvoicePrintPreviewActivity">

        <TextView
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="INVOICE"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#042B97"
                android:id="@+id/company_name"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_below="@+id/company_name"
                android:padding="3dp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/address2"
                android:padding="3dp"
                android:textStyle="bold"
                android:layout_below="@+id/address1"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/mobile_no"
                android:padding="3dp"
                android:visibility="gone"
                android:textSize="12sp"
                android:layout_below="@+id/address2"
                android:text="TEL : 9859360"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="#757575"
            android:layout_height="0.5dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="150dp"
                    android:textSize="12sp"
                    android:text="Receipt Number"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=":"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:id="@+id/receipt_no"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="150dp"
                    android:textSize="12sp"
                    android:text="Receipt Date"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=":"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/receipt_date"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="150dp"
                    android:textSize="12sp"
                    android:text="Customer Code"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=":"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/customer_code"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="150dp"
                    android:textSize="12sp"
                    android:text="Customer Code"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=":"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/customer_code_no"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="150dp"
                    android:textSize="12sp"
                    android:text="Customer Name"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=":"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/customer_name_value"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/adressLayout"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="150dp"
                    android:textSize="12sp"
                    android:text="Pay Mode"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=":"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/pay_mode"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#757575"
            android:visibility="gone"
            android:layout_height="0.5dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#EFEFEF"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="50dp"
                android:text="SNo"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="#042B97"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text="Invoice No"
                android:textSize="12sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#042B97"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text="Invoice Date"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#042B97"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="match_parent"
                android:text="Amount"
                android:layout_weight="1"
                android:textColor="#042B97"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="match_parent"
                android:text="Total"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="12sp"
                android:textColor="#042B97"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#757575"
            android:visibility="gone"
            android:layout_height="0.5dip"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/invoiceList"
            android:layout_width="match_parent"
            tools:listitem="@layout/receipts_print_preview_items"
            android:layout_height="wrap_content"
            android:paddingBottom="220dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:background="#757575"
            android:layout_height="0.5dip"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="110dp"
                android:padding="5dp"
                android:visibility="gone"
                android:textColor="#212121"
                android:textSize="12sp"
                android:text="Item Discount"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textColor="#212121"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=":"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:visibility="gone"
                android:id="@+id/item_disc"
                android:textColor="#212121"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"/>


            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_gravity="end"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:text="Sub Total  :"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/balance_value"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="110dp"
                android:padding="5dp"
                android:textSize="12sp"
                android:textColor="#212121"
                android:text="Bill Discount"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#212121"
                android:text=":"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:textSize="12sp"
                android:id="@+id/bill_disc"
                android:textColor="#212121"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"/>


            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <TextView
                android:layout_width="100dp"
                android:padding="5dp"
                android:textSize="12sp"
                android:textColor="#212121"
                android:id="@+id/tax_title"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:text="Tax (Inc : 7%)  :"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:id="@+id/tax"
                android:textColor="#212121"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:padding="5dp"
                android:textSize="12sp"
                android:textColor="#042B97"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:text="Total Amount  :"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#042B97"
                android:id="@+id/net_total"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#757575"
            android:visibility="gone"
            android:layout_height="0.5dip"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="#EFEFEF"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="#042B97"
                android:textStyle="bold"
                android:text="Total Outstanding"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=":"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:textSize="12sp"
                android:textColor="#042B97"
                android:id="@+id/outstanding_amount"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#757575"
            android:visibility="gone"
            android:layout_height="0.5dip"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:text="-------------"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:text="Received By"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:text="-------------"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="right"
                    android:textSize="12sp"
                    android:text="Authorized By"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/design_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8000"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:elevation="4dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <include
            layout="@layout/pdf_view_layout"/>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>