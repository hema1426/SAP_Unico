<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/expensItem_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:text="te"
        android:padding="@dimen/_8sdp"
        android:id="@+id/serviceName_expen_item"
        android:textStyle="normal"
        android:textSize="@dimen/_9sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_weight="1"
        android:selectAllOnFocus="true"
        android:background="@drawable/table_content_cell_bg"
        android:textColor="@color/black_87"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="1dip"
        android:background="#f2f2f2"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:id="@+id/amount_expen_item"
        android:padding="@dimen/_8sdp"
        android:textStyle="bold"
        android:text="0.0"
        android:gravity="center"
        android:textSize="@dimen/_9sdp"
        android:selectAllOnFocus="true"
        android:layout_weight="0.7"
        android:background="@drawable/table_content_cell_bg"
        android:textColor="@color/lit_green_dark"
        android:layout_height="wrap_content"/>
        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/table_content_cell_bg_no_padding"
            >

            <ImageView
                android:id="@+id/edit_itemExpens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_baseline_edit_24" />
            <ImageView
                android:id="@+id/delete_itemExpens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="@dimen/_5sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_baseline_delete_24"
                app:tint="@color/red_btn_bg_color" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#f3f3f3"
        android:layout_height="1dip"/>

</LinearLayout>