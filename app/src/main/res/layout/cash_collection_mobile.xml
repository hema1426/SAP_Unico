<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.winapp.saperp.activity.CashCollectionActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="#006DDB"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:id="@+id/customer_name_value"
                        android:textSize="10sp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/customer_id"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Total Paid"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_width="250dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="35dp"
                            android:hint="Total"
                            android:focusable="false"
                            android:id="@+id/total_paid"
                            android:layout_weight="1"
                            android:background="@drawable/shadow"
                            android:elevation="3dp"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:textColorHint="#757575"
                            android:textSize="10sp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Total Disc"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:padding="5dp"
                            android:layout_height="wrap_content"/>


                        <EditText
                            android:layout_width="250dp"
                            android:layout_marginRight="20dp"
                            android:id="@+id/total_discount"
                            android:focusable="false"
                            android:layout_height="35dp"
                            android:hint="Discount"
                            android:background="@drawable/shadow"
                            android:elevation="3dp"
                            android:layout_weight="1"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:textColorHint="#757575"
                            android:textSize="10sp"
                            />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment"
                            android:layout_marginLeft="10dp"
                            android:textColor="#212121"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:layout_height="0dip"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:id="@+id/edit_cheque"
                            android:visibility="gone"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_baseline_edit_24"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view"
                        android:elevation="10dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:id="@+id/user_name_layout"
                            android:layout_gravity="center"
                            android:background="@drawable/shadow"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="Select"
                                android:visibility="gone"
                                android:focusable="false"
                                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                                android:background="@drawable/shadow"
                                android:elevation="3dp"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColorHint="#757575"
                                android:textSize="12sp"
                                />

                            <Spinner
                                android:id="@+id/payment_method"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:entries="@array/bank_arrays"
                                android:prompt="@string/bank_prompt" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:layout_marginLeft="10dp"
                            android:textColor="#212121"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/shadow"
                                android:elevation="3dp"
                                android:text="0.00"
                                android:id="@+id/amount_text"
                                android:focusable="false"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColorHint="#757575"
                                android:textSize="10sp"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Return Amt"
                            android:layout_marginLeft="10dp"
                            android:textColor="#212121"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/shadow"
                                android:elevation="3dp"
                                android:text="0.00"
                                android:id="@+id/return_amount"
                                android:focusable="false"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColorHint="#757575"
                                android:textSize="10sp"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Outstanding"
                            android:layout_marginLeft="5dp"
                            android:textColor="#212121"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:focusable="false"
                                android:id="@+id/total_outstanding"
                                android:background="@drawable/shadow"
                                android:elevation="3dp"
                                android:text="0.00"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColorHint="#757575"
                                android:textSize="10sp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="-10dp"
                android:id="@+id/split_layout"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Paid Amt"
                            android:layout_marginLeft="10dp"
                            android:textColor="#212121"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:focusableInTouchMode="true"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/shadow"
                                android:elevation="3dp"
                                android:text="0.00"
                                android:id="@+id/net_amount"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColorHint="#757575"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invoice Amt"
                            android:layout_marginLeft="10dp"
                            android:textColor="#212121"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:focusableInTouchMode="true"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="#f3f3f3"
                                android:elevation="3dp"
                                android:text="0.00"
                                android:id="@+id/selected_amount"
                                android:focusable="false"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColorHint="#757575"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Excess Amt"
                            android:layout_marginLeft="10dp"
                            android:textColor="#212121"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:focusableInTouchMode="true"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="#f3f3f3"
                                android:elevation="3dp"
                                android:focusable="false"
                                android:id="@+id/difference_amount"
                                android:text="0.00"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColorHint="#757575"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Write Off"
                            android:layout_marginLeft="10dp"
                            android:textColor="#212121"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>




                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:focusableInTouchMode="true"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/shadow"
                                android:elevation="3dp"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:text="0.00"
                                android:padding="10dp"
                                android:textColorHint="#757575"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:id="@+id/btn_split"
                                android:text="Split"
                                android:layout_weight="1"
                                android:textSize="14sp"
                                android:textAllCaps="false"
                                android:background="#006DDB"
                                android:layout_height="40dp"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"/>
                            <Button
                                android:layout_width="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textColor="@color/white"
                                android:id="@+id/btn_clr"
                                android:text="Clr"
                                android:textSize="14sp"
                                android:textAllCaps="false"
                                android:background="#006DDB"
                                android:layout_height="40dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="50dp"
                        android:id="@+id/sales_return1"
                        android:background="?actionBarItemBackground"
                        android:src="@drawable/ic_return"
                        android:layout_height="50dp"/>

                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="-10dp"
                android:visibility="gone"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Net Amount"
                            android:layout_marginLeft="10dp"
                            android:textColor="#212121"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:focusableInTouchMode="true"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:background="@drawable/shadow"
                                android:elevation="3dp"
                                android:hint="Enter net amount"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColorHint="#757575"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:visibility="invisible"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Outstanding"
                            android:layout_marginLeft="10dp"
                            android:textColor="#212121"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:text="Split"
                                android:textSize="10sp"
                                android:textAllCaps="false"
                                android:background="#006DDB"
                                android:layout_height="35dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="50dp"
                        android:id="@+id/sales_return"
                        android:background="?actionBarItemBackground"
                        android:src="@drawable/ic_return"
                        android:layout_height="50dp"/>

                </LinearLayout>


            </LinearLayout>

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#f5f5f5"
            android:visibility="gone"
            android:id="@+id/bottom_layout"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:tag="select"
                android:id="@+id/invoice_tab"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="15dp"
                    android:src="@drawable/ic_pay"
                    android:id="@+id/invoice_icon"
                    android:layout_height="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Invoice"
                    android:id="@+id/invoice_title"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#006DDB"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="150dp"
                    android:background="#006DDB"
                    android:id="@+id/invoice_view"
                    android:layout_height="3dp"/>


            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:background="#e2e2e2"
                android:layout_height="60dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:tag="un_select"
                android:id="@+id/total_tab"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="15dp"
                    android:id="@+id/total_icon"
                    android:src="@drawable/ic_balance_amount_unselect"
                    android:layout_height="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Total"
                    android:textStyle="bold"
                    android:id="@+id/total_title"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="150dp"
                    android:visibility="invisible"
                    android:id="@+id/total_view"
                    android:background="#006DDB"
                    android:layout_height="3dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#8000"
            android:visibility="gone"
            android:id="@+id/trans_layout"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/design_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:elevation="4dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <include
            android:id="@+id/bank_option"
            layout="@layout/bank_option_layout"/>


        <include
            android:id="@+id/ltotal_layout"
            android:visibility="gone"
            layout="@layout/total_layout_option"/>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>