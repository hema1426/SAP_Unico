<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content"
    tools:context=".activity.CustomerSelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/root_layout"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/invoice_name"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <TextView
                android:id="@+id/option_cancel"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginRight="20dp"
                android:text="Cancel"
                android:textColor="#212121"
                android:textSize="10sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#f3f3f3"
            android:visibility="gone"
            android:layout_height="1dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:maxLines="2"
                android:maxWidth="250dp"
                android:ellipsize="end"
                android:id="@+id/sr_no"
                android:textSize="10sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="#f2f2f2"
        android:visibility="gone"
        android:layout_height="1dip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:clickable="true"
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/edit_invoice_layout"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:text="Edit Invoice"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:elevation="1dp"
                android:id="@+id/edit_invoice"
                android:layout_gravity="center"
                android:src="@drawable/ic_edit_salesorder"
                app:backgroundTint="@color/white"
                app:fabSize="mini" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:background="#f3f3f3"
            android:layout_height="1dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:id="@+id/cash_collection_layout"
            android:layout_gravity="center"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:text="Make Receipt"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:elevation="1dp"
                android:id="@+id/cash_collection"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_convert_invoice"
                app:backgroundTint="@color/white"
                app:fabSize="mini" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#f3f3f3"
            android:layout_height="1dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:clickable="true"
            android:id="@+id/preview_invoice_layout"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:text="Expense Options"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/print_preview"
                app:elevation="1dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_baseline_print_preview"
                app:backgroundTint="@color/white"
                app:fabSize="mini" />

            <View
                android:layout_width="20dp"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:elevation="1dp"
                android:id="@+id/invoice_print"
                android:layout_gravity="right"
                android:src="@drawable/ic_baseline_print_24"
                app:backgroundTint="@color/white"
                app:fabSize="mini" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#f3f3f3"
            android:layout_height="1dip"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:visibility="gone"
            android:id="@+id/invoice_print_layout"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:text="Invoice Print"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:elevation="1dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_print_24"
                app:backgroundTint="@color/white"
                app:fabSize="mini" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#f3f3f3"
            android:layout_height="1dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:visibility="gone"
            android:id="@+id/do_print_layout"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:text="Delivery Order"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginEnd="10dp"
                app:elevation="1dp"
                android:id="@+id/do_print_preview"
                android:layout_gravity="right"
                android:src="@drawable/ic_baseline_print_preview"
                app:backgroundTint="@color/white"
                app:fabSize="mini" />

            <View
                android:layout_width="20dp"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:elevation="1dp"
                android:id="@+id/do_print"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_print_24"
                app:backgroundTint="@color/white"
                app:fabSize="mini" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:background="#f3f3f3"
            android:layout_height="1dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:clickable="true"
            android:id="@+id/delete_invoice_layout"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:text="Delete Invoice"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#EC7063"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:elevation="1dp"
                android:id="@+id/delete_invoice"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_salesorder"
                app:backgroundTint="@color/white"
                app:fabSize="mini" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#f3f3f3"
            android:layout_height="1dip"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Convert to DO"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_edit_salesorder"
                app:backgroundTint="@color/white"
                app:fabSize="mini" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Print Preview"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_print_24"
                app:backgroundTint="@color/white"
                app:fabSize="mini" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Re Order"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_edit_salesorder"
                app:backgroundTint="@color/white"
                app:fabSize="mini" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/cancel_invoice_layout"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Cancel Invoice"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_gravity="center"
                android:id="@+id/cancel_invoice"
                android:src="@drawable/ic_delete_salesorder"
                app:backgroundTint="@color/white"
                app:fabSize="mini" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>