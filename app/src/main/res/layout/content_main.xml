            <FrameLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#EAECEE"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Choose Customer"
                            android:id="@+id/select_customer"
                            android:layout_marginLeft="10dp"
                            android:maxWidth="300dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:id="@+id/customer_name_value"
                            android:padding="5dp"
                            android:layout_marginLeft="0dp"
                            android:textColor="#212121"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:layout_weight="0"
                        android:layout_gravity="center"
                        android:background="@drawable/border_layout"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Filter"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_filter"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <Space
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="0dip"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:padding="2dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="23 JUL 2020"
                            android:textStyle="bold"
                            android:paddingRight="5dp"
                            android:textSize="12sp"
                            android:id="@+id/date"
                            android:textColor="@color/secondaryColor"
                            android:padding="5dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="10sp"
                            android:layout_marginTop="-5dp"
                            android:id="@+id/user_name"
                            android:text="Azmall"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content"/>

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spinnerPart"
                            android:layout_width="200dp"
                            android:visibility="gone"
                            android:padding="5dp"
                            android:focusableInTouchMode="true"
                            android:filterTouchesWhenObscured="true"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            tools:ignore="HardcodedText" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:src="@mipmap/ic_launcher"
                            android:visibility="gone"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:layout_gravity="center|right"
                            android:layout_marginLeft="5dp"
                            android:layout_height="50dp"/>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#8000"
                    android:visibility="gone"
                    android:id="@+id/customer_translayout"
                    android:orientation="vertical"
                    android:layout_height="match_parent"/>

            </FrameLayout>



            <LinearLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        app:tabIndicatorFullWidth="false"
                        app:tabTextAppearance="@style/TabLayoutTextStyle"
                        app:tabIndicatorColor="@color/colorPrimary"
                        app:tabPaddingStart="25dp"
                        app:tabPaddingEnd="25dp"
                        app:tabMode="scrollable"
                        app:tabGravity="fill"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="#8000"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:id="@+id/tab_translayout"
                        android:layout_height="match_parent"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_sort"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Sort :"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sorting_letters"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </LinearLayout>

              <!--  <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"  />
-->
                <com.winapp.saperpUNICO.utils.HomeViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"  />


            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/design_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:behavior_hideable="true"
            app:behavior_peekHeight="0dp"
            app:elevation="4dp"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <include
                android:id="@+id/customer_layout"
                layout="@layout/customer_layout"/>

        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="#8000"
        android:visibility="gone"
        android:id="@+id/trans_layout"
        android:layout_height="match_parent"
        tools:ignore="Orientation" />

</RelativeLayout>
