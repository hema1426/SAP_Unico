<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content"
    tools:context=".activity.CustomerSelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/root_layout"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/name"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>


            <TextView
                android:layout_width="wrap_content"
                android:text="Cancel"
                android:id="@+id/option_cancel"
                android:textSize="10sp"
                android:layout_marginRight="20dp"
                android:textColor="#212121"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#f3f3f3"
            android:visibility="gone"
            android:layout_height="1dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:maxLines="2"
                android:maxWidth="250dp"
                android:ellipsize="end"
                android:id="@+id/cus_id"
                android:textSize="10sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="#f2f2f2"
        android:layout_height="1dip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/create_invoice_layout"
            android:clickable="true"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Create Invoice"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:id="@+id/create_invoice"
                android:layout_gravity="center"
                android:elevation="1dp"
                app:elevation="1dp"
                android:src="@drawable/ic_edit_salesorder"
                app:backgroundTint="#fcfcfc"
                app:fabSize="mini" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:clickable="true"
            android:id="@+id/create_order_layout"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Create Sales Order"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:id="@+id/create_sales"
                app:elevation="1dp"
                android:layout_margin="1dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_convert_invoice"
                app:backgroundTint="#fcfcfc"
                app:fabSize="mini" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:clickable="true"
            android:id="@+id/location_layout"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Show Location"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                app:elevation="1dp"
                android:id="@+id/show_location"
                android:layout_margin="1dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_location_on_24"
                app:backgroundTint="#fcfcfc"
                app:fabSize="mini" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/create_iventory_layout"
            android:clickable="true"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Create Inventroy"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                app:elevation="1dp"
                android:layout_margin="1dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_convert_invoice"
                app:backgroundTint="#fcfcfc"
                app:fabSize="mini" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/show_location_layout"
            android:clickable="true"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Show Location"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:elevation="1dp"
                app:elevation="1dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_edit_salesorder"
                app:backgroundTint="#fcfcfc"
                app:fabSize="mini" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/delete_layout"
            android:clickable="true"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Delete Customer"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#EC7063"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:elevation="1dp"
                app:elevation="1dp"
                android:id="@+id/delete_customer"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_salesorder"
                app:backgroundTint="#fcfcfc"
                app:fabSize="mini" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:id="@+id/add_receipt_layout"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="ADD RECEIPT"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:id="@+id/add_receipt"
                app:elevation="1dp"
                android:layout_margin="1dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_convert_invoice"
                app:backgroundTint="#fcfcfc"
                app:fabSize="mini" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:id="@+id/customer_outstanding_preview"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="CUSTOMER OUTSTANDING PREVIEW"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:id="@+id/customer_outstanding_print_preview"
                app:elevation="1dp"
                android:layout_margin="1dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_print_preview"
                app:backgroundTint="#fcfcfc"
                app:fabSize="mini" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:visibility="gone"
            android:id="@+id/outstanding_print"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="CUSTOMER OUTSTANDING PRINT"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:id="@+id/customer_outstanding_print"
                app:elevation="1dp"
                android:layout_margin="1dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_print_24"
                app:backgroundTint="#fcfcfc"
                app:fabSize="mini" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>