<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardlist_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_margin="0dp"
        android:layout_marginTop="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        tools:ignore="MissingDefaultResource">

        <View
            android:layout_width="4dp"
            android:visibility="gone"
            android:id="@+id/indicator"
            android:layout_height="105dp"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:paddingBottom="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                android:maxWidth="250dp"
                android:id="@+id/name"
                android:textColor="#212121"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:id="@+id/date"
                android:textSize="12sp"
                android:textColor="@color/secondaryColor"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/share_whatsapp"
                android:layout_marginRight="20dp"
                android:background="?actionBarItemBackground"
                android:src="@drawable/ic_whatsapp"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/share_option"
                android:layout_marginRight="20dp"
                android:background="?actionBarItemBackground"
                android:src="@drawable/ic_baseline_share_24"
                android:layout_height="wrap_content"/>



            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/more_option"
                android:background="?actionBarItemBackground"
                android:src="@drawable/ic_baseline_more_vert_24"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="12sp"
                android:id="@+id/so_no"
                android:textColor="#3655D2"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>


            <LinearLayout
                android:layout_width="50dp"
                android:id="@+id/status_layout"
                android:gravity="center"
                android:background="@drawable/invoice_status_paid"
                android:layout_gravity="center"
                android:layout_height="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/status"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:text="Net Total :"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/net_total"
                    android:textStyle="bold"
                    android:textColor="#24B8A4"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Balance :"
                    android:textColor="#212121"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:id="@+id/balance"
                    android:textColor="#D41313"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/show_hide"
                android:tag="hide"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#d3d3d3"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:layout_height="1dip"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/bottom_layout"
            android:background="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@android:color/white"
            tools:ignore="MissingDefaultResource">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/progress_layout"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:layout_width="30dp"
                    style="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:layout_gravity="center"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:text="Products Loading..."
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/main_layout"
                android:visibility="gone"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:id="@+id/no_of_invoices"
                    android:maxWidth="280dp"
                    android:textColor="#212121"
                    android:text="TOTAL INVOICES : 12"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <include
                        layout="@layout/invoice_details_items"/>

                    <View
                        android:layout_width="match_parent"
                        android:background="#f5f5f5"
                        android:layout_height="1dip"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/invoiceList"
                        android:layout_width="match_parent"
                        tools:listitem="@layout/invoice_details_view_items"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.cardview.widget.CardView>



</LinearLayout>