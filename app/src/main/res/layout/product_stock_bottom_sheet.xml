<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardlist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    tools:ignore="MissingDefaultResource">

<LinearLayout
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".activity.CustomerSelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/root_layout"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Avin Milk"
                android:layout_marginLeft="20dp"
                android:id="@+id/name"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="From Date"
                    android:textColor="#006DDB"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_width="100dp"
                    android:hint="From date"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:background="@drawable/border_layout"
                    android:layout_marginTop="5dp"
                    android:layout_height="30dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="To Date"
                    android:textColor="#006DDB"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_width="100dp"
                    android:hint="To date"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:background="@drawable/border_layout"
                    android:layout_marginTop="5dp"
                    android:layout_height="30dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:text="To Date"
                    android:visibility="invisible"
                    android:src="@drawable/ic_chevron_up"
                    android:textColor="#006DDB"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_width="wrap_content"
                    android:text="Apply"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_height="30dp"
                    android:textSize="10sp"
                    android:background="@drawable/button_background"
                    app:elevation="1dp"
                    android:layout_gravity="center"
                    app:fabSize="mini" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:text="To Date"
                    android:src="@drawable/ic_chevron_up"
                    android:textColor="#006DDB"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:elevation="1dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_date"
                    />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#f3f3f3"
            android:visibility="gone"
            android:layout_height="1dip"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="#f2f2f2"
        android:layout_height="1dip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#f5f5f5"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:text="To Date"
                android:src="@drawable/ic_selling"
                android:textColor="#006DDB"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_marginTop="5dp"
              android:textSize="12sp"
              android:text="Selling Price"
              android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#212121"
                android:text="20.05"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:text="To Date"
                android:src="@drawable/ic_profit"
                android:textColor="#006DDB"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="Profit Amount"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#212121"
                android:text="30.35"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:text="To Date"
                android:src="@drawable/ic_balance"
                android:textColor="#006DDB"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="Balance Stock"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#212121"
                android:text="26.05"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>