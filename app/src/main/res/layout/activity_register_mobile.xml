<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_new_back"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingRight="100dp"
                android:id="@+id/main_layout"
                android:focusableInTouchMode="true"
                android:gravity="bottom"
                android:layout_gravity="center"
                android:paddingBottom="20dp"
                android:paddingLeft="100sp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:text="Register"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="150dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:paddingBottom="20dp"
                    android:background="#006DDB"
                    android:layout_height="4dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/user_name_layout"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:src="@drawable/ic_baseline_email_24"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/email_id"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/shadow"
                            android:elevation="3dp"
                            android:hint="Email Id"
                            android:drawableRight="@drawable/ic_baseline_email_24"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:textColorHint="#757575"
                            android:textSize="12sp"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <ImageView
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_lock_24"
                    android:layout_height="wrap_content"/>


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>


                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="1dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/password_layout"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:hint="Mobile number"
                            android:padding="10dp"
                            android:maxLines="1"
                            android:maxLength="8"
                            android:background="@drawable/shadow"
                            android:inputType="number"
                            android:drawableRight="@drawable/ic_baseline_phone_android_24"
                            android:id="@+id/mobile_no"
                            android:elevation="3dp"
                            android:textSize="12sp"
                            android:layout_height="50dp"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:background="#f3f3f3"
                            android:tag="show"
                            android:visibility="gone"
                            android:id="@+id/password_toggle"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_eye"
                            android:layout_height="60dp"/>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="1dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/device_layout"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_width="30dp"
                            android:background="#f3f3f3"
                            android:tag="show"
                            android:visibility="gone"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_person_outline_24"
                            android:layout_height="60dp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <Button
                    android:layout_width="match_parent"
                    android:layout_marginTop="20sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:id="@+id/btn_register"
                    android:text="VALIDATE"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:background="#006DDB"
                    android:layout_height="50dp"/>



                <View
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"/>

                <Button
                    android:layout_width="300dp"
                    android:layout_marginTop="20sp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:text="Register"
                    android:textStyle="bold"
                    android:background="@drawable/corner_button"
                    android:layout_height="45dp"/>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="License Key"
            android:id="@+id/title_text"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="License Key"
            android:visibility="gone"
            android:textStyle="normal"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/licence1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:selectAllOnFocus="true"
                android:layout_weight="1"
                android:background="@drawable/licence_border"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:maxLength="4"
                android:textAllCaps="true"
                android:hint="XXXX"
                android:textSize="18sp" />

            <TextView
                android:layout_width="15dp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:drawableStart="@drawable/minus"
                android:gravity="center"
                android:textColor="@color/primary"
                android:layout_height="10dp"/>

            <EditText
                android:id="@+id/licence2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAllCaps="true"
                android:selectAllOnFocus="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/licence_border"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:maxLength="4"
                android:hint="XXXX"
                android:textSize="18sp" />

            <TextView
                android:layout_width="15dp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:drawableStart="@drawable/minus"
                android:gravity="center"
                android:textColor="@color/primary"
                android:layout_height="10dp"/>

            <EditText
                android:id="@+id/licence3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:selectAllOnFocus="true"
                android:layout_weight="1"
                android:background="@drawable/licence_border"
                android:gravity="center"
                android:hint="XXXX"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:maxLength="4"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView
                android:layout_width="15dp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:drawableStart="@drawable/minus"
                android:gravity="center"
                android:textColor="@color/primary"
                android:layout_height="10dp"/>

            <EditText
                android:id="@+id/licence4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:textAllCaps="true"
                android:layout_marginRight="5dp"
                android:selectAllOnFocus="true"
                android:layout_weight="1"
                android:background="@drawable/licence_border"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:maxLength="4"
                android:hint="XXXX"
                android:textSize="18sp" />

            <TextView
                android:layout_width="15dp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:drawableStart="@drawable/minus"
                android:gravity="center"
                android:textColor="@color/primary"
                android:layout_height="10dp"/>

            <EditText
                android:id="@+id/licence5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/licence_border"
                android:gravity="center"
                android:hint="XXXX"
                android:imeOptions="actionDone"
                android:inputType="textCapCharacters"
                android:maxLength="4"
                android:selectAllOnFocus="true"
                android:textAllCaps="true"
                android:textSize="18sp" />

        </LinearLayout>


        <CheckBox
            android:layout_width="wrap_content"
            android:text="Remember Me"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:id="@+id/remember_me"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Device Name"
            android:padding="10dp"
            android:maxLines="1"
            android:maxLength="20"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/shadow"
            android:inputType="text"
            android:drawableRight="@drawable/ic_baseline_person_outline_24"
            android:id="@+id/device_name"
            android:elevation="3dp"
            android:textSize="12sp"
            android:layout_height="50dp"/>

        <Button
            android:layout_width="250dp"
            android:layout_marginTop="40dp"
            android:text="Activate Device"
            android:textStyle="bold"
            android:id="@+id/btn_activate"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@drawable/button_background"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/otp_layout"
            android:layout_height="wrap_content">

            <com.chaos.view.PinView
                android:id="@+id/pinView"
                style="@style/PinWidget.PinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:inputType="number"
                android:padding="20dp"
                android:textSize="20sp"
                app:itemCount="4"
                app:itemHeight="40dp"
                app:itemWidth="40dp"
                app:itemRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lineColor="@android:color/darker_gray"
                app:viewType="rectangle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:text="Didn't get the OTP? RESEND OTP."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/pinView"
                app:layout_constraintHorizontal_bias="0.473"
                app:layout_constraintStart_toStartOf="@+id/pinView"
                app:layout_constraintTop_toBottomOf="@+id/pinView" />


            <Button
                android:layout_width="250dp"
                android:layout_marginTop="40dp"
                android:text="Verify OTP"
                android:textStyle="bold"
                android:id="@+id/btn_otp_verify"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_height="50dp"/>


        </LinearLayout>
    </LinearLayout>
</FrameLayout>