<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lit_blue"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardlist_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_margin="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/lit_blue"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardBackgroundColor="@color/lit_grey"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        tools:ignore="MissingDefaultResource">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <View
                android:layout_width="3dip"
                android:visibility="gone"
                android:background="@color/primary"
                android:layout_height="95dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:padding="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="50dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:id="@+id/sn_no"
                        android:textColor="@color/primary"
                        android:text="S.No"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:layout_marginLeft="20dp"
                        android:maxLines="1"
                        android:maxWidth="280dp"
                        android:id="@+id/date"
                        android:textColor="@color/primary"
                        android:text="DATE"
                        android:layout_height="wrap_content"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="REQUEST NO"
                        android:layout_marginRight="60dp"
                        android:textStyle="bold"
                        android:id="@+id/transfer_no"
                        android:textSize="13sp"
                        android:textColor="@color/primary"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginRight="20dp"
                        android:visibility="gone"
                        android:id="@+id/share_whatsapp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/ic_whatsapp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginRight="20dp"
                        android:id="@+id/share_content"
                        android:visibility="gone"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/ic_share_1"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/more_option"
                        android:visibility="gone"
                        android:background="?actionBarItemBackground"
                        android:src="@drawable/ic_baseline_more_vert_24"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="13sp"
                            android:text="Status :"
                            android:visibility="gone"
                            android:textColor="#212121"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14sp"
                            android:text="STATUS"
                            android:textStyle="bold"
                            android:id="@+id/status"
                            android:textColor="@color/primary"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="13sp"
                            android:text="Location :"
                            android:textColor="#212121"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/to_location"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#3655D2"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="13sp"
                            android:text="User :"
                            android:textColor="#212121"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:id="@+id/user"
                            android:textColor="#D41313"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="0dp"/>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/show_hide"
                        android:tag="hide"
                        android:visibility="gone"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="#d3d3d3"
                android:visibility="gone"
                android:layout_gravity="bottom"
                android:layout_height="1dip"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_layout"
                android:visibility="gone"
                android:background="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@android:color/white"
                tools:ignore="MissingDefaultResource">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/progress_layout"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:layout_width="30dp"
                        style="@style/TextAppearance.AppCompat.Small.Inverse"
                        android:layout_gravity="center"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="10sp"
                        android:text="Invoices Loading..."
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/main_layout"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:ellipsize="end"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:id="@+id/no_of_invoices"
                        android:maxWidth="280dp"
                        android:textColor="#212121"
                        android:text="TOTAL INVOICES : 12"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <include
                            layout="@layout/receipt_invoice_title"/>

                        <View
                            android:layout_width="match_parent"
                            android:background="#f5f5f5"
                            android:layout_height="1dip"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/invoiceList"
                            android:layout_width="match_parent"
                            tools:listitem="@layout/receipt_invoice_items"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>