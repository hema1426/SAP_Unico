<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="8dp"
        app:cardCornerRadius="3dp"
        card_view:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="false"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/orderHistoryLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?actionBarItemBackground"
    >
            <com.github.vipulasri.timelineview.TimelineView
                android:id="@+id/timeline1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:endLineColor="@color/colorPrimary"
                app:linePadding="1dp"
                app:lineOrientation="vertical"
                app:lineWidth="2dp"
                android:visibility="gone"
                app:lineStyle="normal"
                app:markerSize="1dp"
                app:startLineColor="@color/colorPrimary" />

            <!--            <com.github.vipulasri.timelineview.TimelineView-->
            <!--                android:id="@+id/timeline1"-->
            <!--                android:layout_width="2dp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                app:endLineColor="@color/accentLight"-->
            <!--                app:linePadding="1dp"-->
            <!--                android:layout_marginLeft="10dp"-->
            <!--                app:lineOrientation="vertical"-->
            <!--                app:lineWidth="5dp"-->
            <!--                app:lineStyle="normal"-->
            <!--                app:startLineColor="@color/orangclr" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:background="@color/pink_clr1" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:gravity="left"
                            android:padding="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/order_dateHis"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:layout_gravity="left"
                                android:text="text"
                                android:textStyle="bold"
                                android:textColor="@color/lit_green_dark"
                                android:textSize="11dp"
                                />
                            <TextView
                                android:id="@+id/order_idHis"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:layout_gravity="left"
                                android:text="text"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_gravity="right"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Due Amt : "
                                    android:textColor="#212121"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:id="@+id/due_amountHis"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:textColor="#EC7063"
                                    android:textSize="12sp"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:gravity="left"
                            android:padding="7dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/customer_nameHis"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="left"
                                android:text="text"
                                android:textStyle="bold"
                                android:textColor="#757575"
                                android:textSize="12dp"/>

                            <TextView
                                android:id="@+id/paid_amountHis"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="tt"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="7dp"
                                android:textColor="@color/secondaryColor"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                />

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

