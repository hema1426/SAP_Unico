<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:id="@+id/cardlist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_margin="0dp"
    android:layout_marginTop="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    tools:ignore="MissingDefaultResource">

    <View
        android:layout_width="4dip"
        android:id="@+id/indicator"
        android:visibility="gone"
        android:layout_height="105dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="250dp"
                android:id="@+id/name"
                android:textColor="#212121"
                android:text="Azmal Trading Company"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:id="@+id/date"
                android:text="13/34/3232"
                android:textSize="12sp"
                android:textColor="@color/secondaryColor"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:padding="3dp"
                android:id="@+id/more"
                android:background="?actionBarItemBackground"
                android:src="@drawable/ic_baseline_more_vert_24"
                android:layout_marginRight="0dp"
                android:textSize="12sp"
                android:textColor="#E74C3C"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="13sp"
                android:id="@+id/so_no"
                android:textColor="#3655D2"
                android:text="INV #1234"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>


            <LinearLayout
                android:layout_width="50dp"
                android:gravity="center"
                android:id="@+id/status_layout"
                android:background="@drawable/salesorder_status"
                android:layout_gravity="center"
                android:layout_height="25dp">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="1dp"
                    android:layout_height="wrap_content"
                    android:text="InProgress Invoice"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:text="Address :"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="150dp"
                    android:id="@+id/address"
                    android:maxWidth="150dp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:layout_marginLeft="5dp"
                    android:maxLines="2"
                    android:textColor="#24B8A4"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:text="Net Total :"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/net_total"
                    android:textStyle="bold"
                    android:textColor="#D41313"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <ImageView
                android:id="@+id/show_hide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:tag="hide" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#d3d3d3"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:layout_height="1dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_layout"
            android:background="?android:attr/selectableItemBackground"
            tools:ignore="MissingDefaultResource"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/progress_layout"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:layout_width="30dp"
                    style="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:layout_gravity="center"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:text="Products Loading..."
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/main_layout"
                android:visibility="gone"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:id="@+id/no_of_invoices"
                    android:maxWidth="280dp"
                    android:textColor="#212121"
                    android:text="TOTAL INVOICES : 12"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <include
                        layout="@layout/sales_order_list_view"/>

                    <View
                        android:layout_width="match_parent"
                        android:background="#f5f5f5"
                        android:layout_height="1dip"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/invoiceList"
                        android:layout_width="match_parent"
                        tools:listitem="@layout/sales_details_view_items"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>