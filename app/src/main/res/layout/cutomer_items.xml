<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cardlist_item"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/root_layout"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:padding="1dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Winapp Solution PTE LTD"
                android:layout_marginLeft="10dp"
                android:id="@+id/name"
                android:maxLines="21"
                android:ellipsize="end"
                android:maxWidth="300dp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>


            <TextView
                android:id="@+id/customer_code"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginRight="0dp"
                android:text="00024"
                android:textColor="#006DDB"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/more_icon"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_more_vert_24"
                android:background="?actionBarItemBackground"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#f3f3f3"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_height="1dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="15dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/location_icon"
                android:src="@drawable/ic_baseline_location_on_24"
                android:layout_height="15dp"
                card_view:tint="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLines="2"
                android:maxWidth="250dp"
                android:ellipsize="end"
                android:text="334,North Street,Singapore"
                android:id="@+id/customer_address"
                android:textSize="10sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="15dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/outstanding_icon"
                android:src="@drawable/ic_pay"
                android:layout_height="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLines="2"
                android:maxWidth="250dp"
                android:ellipsize="end"
                android:text="Outstanding Amount :"
                android:textSize="10sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLines="2"
                android:maxWidth="250dp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:ellipsize="end"
                android:id="@+id/outstanding_amount"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:visibility="gone"
                android:src="@drawable/ic_reorder"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="#f2f2f2"
        android:layout_height="1dip"/>

</androidx.cardview.widget.CardView>