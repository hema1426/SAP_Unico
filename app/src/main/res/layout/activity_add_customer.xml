<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:paddingBottom="10dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="Customer Info"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:focusableInTouchMode="true"
                android:layout_marginTop="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/customer_code"
                            android:textSize="12sp"
                            android:textColor="#212121"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>

                        <Space
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:layout_height="0dip"/>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/invoice_user"
                            android:layout_toRightOf="@+id/code_title"
                            android:layout_toEndOf="@+id/code_title"
                            android:layout_above="@+id/code"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/customer_code"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_below="@+id/code_title"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/invoice_edit_text"
                        android:gravity="top"
                        android:padding="10dp"
                        android:textSize="14sp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/customer_name"
                            android:textSize="12sp"
                            android:textColor="#212121"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>

                        <Space
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:layout_height="0dip"/>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/invoice_user"
                            android:layout_toRightOf="@+id/code_title"
                            android:layout_toEndOf="@+id/code_title"
                            android:layout_above="@+id/code"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:id="@+id/customer_name_value"
                        android:gravity="top"
                        android:background="@drawable/invoice_edit_text"
                        android:layout_below="@+id/code_title"
                        android:layout_height="40dp"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/postal_code"
                            android:textColor="#212121"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:id="@+id/postal_code"
                        android:textSize="14sp"
                        android:maxLength="6"
                        android:inputType="number"
                        android:gravity="top"
                        android:background="@drawable/invoice_edit_text"
                        android:layout_below="@+id/code_title"
                        android:layout_height="40dp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/country"
                            android:textSize="12sp"
                            android:textColor="#212121"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:text="Singapore"
                        android:focusable="false"
                        android:id="@+id/country"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:gravity="top"
                        android:background="@drawable/invoice_edit_text"
                        android:layout_below="@+id/code_title"
                        android:layout_height="40dp"/>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/address"
                        android:textSize="12sp"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                    <Space
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="0dip"/>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_baseline_location_on_24"
                        android:layout_toRightOf="@+id/code_title"
                        android:layout_toEndOf="@+id/code_title"
                        android:layout_above="@+id/code"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:id="@+id/address1"
                    android:gravity="top"
                    android:background="@drawable/invoice_edit_text"
                    android:layout_below="@+id/code_title"
                    android:layout_height="40dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:id="@+id/address2"
                    android:gravity="top"
                    android:background="@drawable/invoice_edit_text"
                    android:layout_below="@+id/code_title"
                    android:layout_height="40dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:id="@+id/address3"
                    android:textSize="14sp"
                    android:gravity="top"
                    android:background="@drawable/invoice_edit_text"
                    android:layout_below="@+id/code_title"
                    android:layout_height="40dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Delivery Address"
                        android:textSize="12sp"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                    <Space
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="0dip"/>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_baseline_location_on_24"
                        android:layout_toRightOf="@+id/code_title"
                        android:layout_toEndOf="@+id/code_title"
                        android:layout_above="@+id/code"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:id="@+id/delivery_address"
                    android:gravity="top"
                    android:background="@drawable/invoice_edit_text"
                    android:layout_below="@+id/code_title"
                    android:layout_height="40dp"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:text="Other Info"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="#006DDB"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/tax"
                        android:textSize="12sp"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                    <Space
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="0dip"/>

                </LinearLayout>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:focusable="false"
                    android:id="@+id/tax_type"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:hint="Tax Type"
                    android:inputType="text"
                    android:textSize="12sp"
                    android:background="@drawable/invoice_edit_text"
                    android:layout_below="@+id/code_title"
                    android:layout_height="40dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Email"
                        android:textSize="12sp"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                    <Space
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="0dip"/>

                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:inputType="textEmailAddress"
                    android:id="@+id/email_id"
                    android:gravity="top"
                    android:background="@drawable/invoice_edit_text"
                    android:layout_below="@+id/code_title"
                    android:layout_height="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Note"
                        android:textSize="12sp"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                    <Space
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="0dip"/>

                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:id="@+id/notes"
                    android:hint="Notes for Customer"
                    android:gravity="top"
                    android:background="@drawable/invoice_edit_text"
                    android:layout_below="@+id/code_title"
                    android:layout_height="60dp"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        android:id="@+id/add_customer"
        app:backgroundTint="#006DDB"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_done_24"
        app:layout_anchor="@id/remarks"
        app:layout_anchorGravity="bottom|right|end" />

</FrameLayout>