<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/main_layout"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="center"
                android:id="@+id/edit_product"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="0dip"/>

            <ImageView
                android:layout_width="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="center"
                android:id="@+id/delete_product"
                android:src="@drawable/ic_baseline_delete_forever_24"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/item_code"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Code"
            android:textSize="10sp"
            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"

            android:textStyle="bold"
            android:id="@+id/product"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Item Descrition"
            android:textSize="10sp"
            />
        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/carton_qty"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Carton"
            android:textSize="10sp"
            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/loose_qty"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Unit"
            android:textSize="10sp"

            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>



        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"

            android:gravity="center"
            android:id="@+id/ctn_price"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Ctn Price"
            android:textSize="10sp"
            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>



        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"

            android:textStyle="bold"
            android:id="@+id/loose_price"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Price"
            android:textSize="10sp"

            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"

            android:gravity="center"
            android:id="@+id/qty"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Qty"
            android:textSize="10sp"

            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:visibility="gone"
            android:gravity="center"
            android:layout_weight="1"

            android:textStyle="bold"
            android:id="@+id/foc"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="FOC"
            android:textSize="10sp"

            />

        <View
            android:layout_width="1dip"
            android:visibility="gone"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_weight="1"

            android:textStyle="bold"
            android:id="@+id/total"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Total"
            android:textSize="10sp"

            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/disc"
            android:layout_weight="1"

            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Disc"
            android:textSize="10sp"

            />

        <View
            android:layout_width="1dip"
            android:visibility="gone"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:id="@+id/sub_total"
            android:layout_weight="1"

            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Sub Total"
            android:textSize="10sp"

            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:id="@+id/tax"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Tax"
            android:textSize="10sp"

            />

        <View
            android:layout_width="1dip"
            android:background="#f2f2f2"
            android:layout_height="match_parent"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"

            android:gravity="center"
            android:id="@+id/net_total"
            android:textStyle="bold"
            android:textColor="#212121"
            android:background="@drawable/table_content_cell_bg"
            android:text="Net Total"
            android:textSize="10sp"

            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#f3f3f3"
        android:layout_height="1dip"/>
</LinearLayout>