<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_margin="1dp"
                android:layout_marginTop="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="@dimen/cardview_default_elevation"
                tools:ignore="MissingDefaultResource">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/image"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_user"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Invoice Amount"
                        android:textStyle="bold"
                        android:id="@+id/invoice_amount_title"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/image"
                        android:textSize="12sp"
                        android:textColor="#A569BD"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="$450"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/black_87"
                        android:id="@+id/invoice_amount"
                        android:layout_below="@id/invoice_amount_title"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:background="#f3f3f3"
                        android:layout_marginTop="10dp"
                        android:id="@+id/invoice_amount_view"
                        android:layout_below="@id/invoice_amount"
                        android:layout_height="1dip"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="50 Customers"
                        android:padding="5dp"
                        android:textColor="@color/blue_500"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:layout_below="@id/invoice_amount_view"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_margin="1dp"
                android:layout_marginTop="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="@dimen/cardview_default_elevation"
                tools:ignore="MissingDefaultResource">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/image1"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_user"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Outstanding Amount"
                        android:textStyle="bold"
                        android:id="@+id/outstanding_amount_title"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/image1"
                        android:textSize="12sp"
                        android:textColor="#A569BD"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="$500"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/black_87"
                        android:id="@+id/outstanding_amount"
                        android:layout_below="@id/outstanding_amount_title"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:background="#f3f3f3"
                        android:layout_marginTop="10dp"
                        android:id="@+id/outstanding_amount_view"
                        android:layout_below="@id/outstanding_amount"
                        android:layout_height="1dip"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="20 Customers"
                        android:padding="5dp"
                        android:textColor="@color/blue_500"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:layout_below="@id/outstanding_amount_view"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_margin="1dp"
                android:layout_marginTop="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="@dimen/cardview_default_elevation"
                tools:ignore="MissingDefaultResource">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/image2"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_user"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="No Of Customers"
                        android:textStyle="bold"
                        android:id="@+id/no_of_customers_title"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/image2"
                        android:textSize="12sp"
                        android:textColor="#A569BD"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="100"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/black_87"
                        android:id="@+id/total_customers"
                        android:layout_below="@id/no_of_customers_title"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:background="#f3f3f3"
                        android:layout_marginTop="10dp"
                        android:id="@+id/total_customers_view"
                        android:layout_below="@id/total_customers"
                        android:layout_height="1dip"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="50 Customers"
                        android:padding="5dp"
                        android:textColor="@color/blue_500"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:layout_below="@id/total_customers_view"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_margin="1dp"
                android:layout_marginTop="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="@dimen/cardview_default_elevation"
                tools:ignore="MissingDefaultResource">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/image3"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_user"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Total Products"
                        android:textStyle="bold"
                        android:id="@+id/total_products_title"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/image3"
                        android:textSize="12sp"
                        android:textColor="#A569BD"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="200"
                        android:layout_marginLeft="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/black_87"
                        android:id="@+id/total_products"
                        android:layout_below="@id/total_products_title"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:background="#f3f3f3"
                        android:layout_marginTop="10dp"
                        android:id="@+id/total_products_view"
                        android:layout_below="@id/total_products"
                        android:layout_height="1dip"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="50 Customers"
                        android:padding="5dp"
                        android:textColor="@color/blue_500"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:layout_below="@id/total_products_view"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_margin="1dp"
            android:layout_marginTop="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            tools:ignore="MissingDefaultResource">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barchart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_above="@+id/seekBar1" />

                <SeekBar
                    android:id="@+id/seekBar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="8dp"
                    android:layout_toLeftOf="@+id/tvYMax"
                    android:layout_marginRight="5dp"
                    android:max="200"
                    android:paddingBottom="12dp" />

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/seekBar2"
                    android:layout_margin="8dp"
                    android:visibility="gone"
                    android:layout_marginBottom="35dp"
                    android:layout_toLeftOf="@+id/tvXMax"
                    android:layout_marginRight="5dp"
                    android:max="1500"
                    android:paddingBottom="12dp" />

                <TextView
                    android:id="@+id/tvXMax"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/seekBar1"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:text="Dash"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/tvYMax"
                    android:layout_width="60dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/seekBar2"
                    android:layout_alignParentRight="true"
                    android:text="Dash"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textAppearance="?android:attr/textAppearanceSmall" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_margin="1dp"
                android:layout_marginTop="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="@dimen/cardview_default_elevation"
                tools:ignore="MissingDefaultResource">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Invoices"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/piechart"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="300dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_below="@id/piechart"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Paid : $123"
                            android:textSize="12sp"
                            android:textColor="@color/blue_500"
                            android:layout_height="wrap_content"/>

                        <Space
                            android:layout_width="0dip"
                            android:layout_weight="1"
                            android:layout_height="0dip"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Due : 123"
                            android:textSize="12sp"
                            android:textColor="@color/black_87"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_margin="1dp"
                android:layout_marginTop="0dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="10dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="@dimen/cardview_default_elevation"
                tools:ignore="MissingDefaultResource">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/line_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>